{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/$1"
    },
    {
      "src": "/components/(.*)",
      "dest": "/src/components/$1"
    }
  ],
  "alias": {
    "@components": "./src/components",
    "@utils": "./src/utils",
    "@hooks": "./src/hooks"
  }
}
